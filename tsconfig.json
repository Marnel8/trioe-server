{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",           // Use ESNext for ESM imports
    "moduleResolution": "node",  // Resolve modules in Node.js style
    "target": "ES2020",          // Compile to modern JS
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["index.ts", "*.ts"],
  "exclude": ["node_modules"]
}